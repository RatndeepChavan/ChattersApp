{
	"tags": {
		"allowUnknownTags": false
	},
	"source": {
		"include": ["."],
		"includePattern": ".+\\.js(doc|x)?$",
		"excludePattern": "node_modules"
	},
	"plugins": ["plugins/markdown"],
	"opts": {
		"template": "node_modules/docdash/",
		"encoding": "utf8",
		"destination": "./docs/",
		"recurse": true,
		"verbose": true
	},
	"templates": {
		"cleverLinks": false,
		"monospaceLinks": false
	},
	"docdash": {
		"static": true,
		"sort": true,
		"sectionOrder": [
			"Classes",
			"Modules",
			"Externals",
			"Events",
			"Namespaces",
			"Mixins",
			"Tutorials",
			"Interfaces"
		],
		"search": true,
		"collapse": false
	}
}
